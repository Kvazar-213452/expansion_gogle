{
    "manifest_version": 3,
    "name": "My Chrome Extension",
    "version": "1.0",
    "description": "Change body background color",
    "permissions": ["tabs"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["src/bd_edit.js"]
      }
    ],
    "action": {
      "default_popup": "src/main.html",
      "default_icon": {
        "16": "icon/icon16.png",
        "48": "icon/icon48.png",
        "128": "icon/icon128.png"
      }
    }
  }
